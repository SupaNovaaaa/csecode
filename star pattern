#include<stdio.h>
void printstarpattern(int numRows){
    for(int i=1;i<=numRows;i++) {
        for(int j=1;j<=numRows-i;j++) {
            printf(" ");
        }
        for(int k=1;k<=2*i-1;k++) {
            printf("*");
        }
        printf("\n");
    }
}
int main() {
    int numRows;
    scanf("%d",&numRows);
    printstarpattern(numRows);
    return 0;
}
